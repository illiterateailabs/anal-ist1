# Analyst Augmentation Agent - Environment Variables
# IMPORTANT: This is an example file. Copy to .env and replace values with your own.
# DO NOT commit your actual .env file to version control!

# ======================================================================
# General Application Settings
# ======================================================================
APP_NAME=Analyst Augmentation Agent
APP_VERSION=1.0.0
ENVIRONMENT=development  # Options: development, staging, production, test
DEBUG=true
LOG_LEVEL=INFO  # Options: DEBUG, INFO, WARNING, ERROR, CRITICAL
HOST=0.0.0.0
PORT=8000

# ======================================================================
# Database Settings
# ======================================================================
# PostgreSQL connection string - asyncpg driver required for async operations
DATABASE_URL=postgresql+asyncpg://analyst:change_me_in_production@localhost:5432/analyst_agent
DATABASE_POOL_SIZE=5
DATABASE_MAX_OVERFLOW=10
DATABASE_POOL_RECYCLE=3600
DATABASE_ECHO=false

# Legacy individual components (DATABASE_URL is preferred)
POSTGRES_USER=analyst
POSTGRES_PASSWORD=change_me_in_production
POSTGRES_HOST=localhost
POSTGRES_PORT=5432
POSTGRES_DB=analyst_agent

# ======================================================================
# Neo4j Graph Database Settings
# ======================================================================
NEO4J_URI=bolt://localhost:7687
NEO4J_USERNAME=neo4j
NEO4J_PASSWORD=change_me_in_production
NEO4J_DATABASE=neo4j
REQUIRE_NEO4J=true
NEO4J_MAX_CONNECTION_LIFETIME=3600
NEO4J_MAX_CONNECTION_POOL_SIZE=10
NEO4J_CONNECTION_ACQUISITION_TIMEOUT=30

# ======================================================================
# Redis Settings
# ======================================================================
REDIS_URL=redis://localhost:6379/0
REDIS_PASSWORD=
REDIS_DB=0
REDIS_MAX_CONNECTIONS=10

# ======================================================================
# Security Settings
# ======================================================================
# IMPORTANT: Generate strong random strings for these values in production!
SECRET_KEY=generate_a_secure_random_key_for_production
JWT_SECRET_KEY=generate_a_different_secure_random_key_for_production
JWT_ALGORITHM=HS256
JWT_EXPIRATION_MINUTES=60
JWT_REFRESH_EXPIRATION_MINUTES=10080  # 7 days
JWT_AUDIENCE=analyst-agent-api
JWT_ISSUER=analyst-agent

# Cross-Origin Resource Sharing
CORS_ORIGINS=http://localhost:3000,http://localhost:8000

# ======================================================================
# External API Keys and Services
# ======================================================================
# Google Gemini API
GOOGLE_API_KEY=your_google_api_key_here
GEMINI_MODEL=gemini-1.5-pro-preview-05-14
MODEL=gemini/gemini-1.5-pro-preview-05-14

# Search API
SERPER_API_KEY=your_serper_api_key_here

# Sandbox Execution
E2B_API_KEY=your_e2b_api_key_here
E2B_TEMPLATE_ID=python-data-science

# Financial Data API Keys
ALPHA_VANTAGE_API_KEY=your_alpha_vantage_api_key_here
POLYGON_API_KEY=your_polygon_api_key_here
NEWS_API_KEY=your_news_api_key_here

# Blockchain API Keys
DUNE_API_KEY=your_dune_api_key_here
ETHERSCAN_API_KEY=your_etherscan_api_key_here
BSCSCAN_API_KEY=your_bscscan_api_key_here
POLYGONSCAN_API_KEY=your_polygonscan_api_key_here
ARBISCAN_API_KEY=your_arbiscan_api_key_here
OPTIMISM_API_KEY=your_optimism_api_key_here
FTMSCAN_API_KEY=your_ftmscan_api_key_here
SNOWTRACE_API_KEY=your_snowtrace_api_key_here
COINGECKO_API_KEY=your_coingecko_api_key_here
MORALIS_API_KEY=your_moralis_api_key_here
COVALENT_API_KEY=your_covalent_api_key_here

# ======================================================================
# Observability Settings
# ======================================================================
SENTRY_DSN=your_sentry_dsn_here
ENABLE_PROMETHEUS=true
METRICS_PATH=/metrics
ENABLE_STRUCTURED_LOGGING=true

# ======================================================================
# Frontend Settings
# ======================================================================
# This should be set in the frontend environment
NEXT_PUBLIC_API_URL=http://localhost:8000/api/v1
